{
    "manifest_version": 3,
    "name": "YT Summarizer",
    "version": "1.0",
    "description": "Summarize the content of YouTube videos having transcripts",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost/*"
    ],
    
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
